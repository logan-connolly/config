#!/usr/bin/zsh
#
#         _
#   _   _| |_
#  | | | | __|
#  | |_| | |
#   \__, |\__|
#   |___/
#
#
# Watch youtube video or playlist from mpv.
# Pass url if single video or playlist id for playlists.

url_regex='(https?|ftp|file)://[-A-Za-z0-9\+&@#/%?=~_|!:,.;]*[-A-Za-z0-9\+&@#/%=~_|]'
if [[ $1 =~ $url_regex ]]; then
  nohup mpv $1&
else
  nohup mpv "https://www.youtube.com/playlist?list=${1}"&
fi
