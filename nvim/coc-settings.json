{
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "json",
    "typescript"
  ],
  "suggest.enablePreview": true,
  "python.jediEnabled": false,
  "python.venvFolders": ["venv", "~/.envs"],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/.envs/neovim3/bin/flake8",
  "python.linting.flake8Args": ["max-line-length=88"],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.envs/neovim3/bin/black",
  "python.sortImports.path": "~/.envs/neovim3/bin/isort",
  "tsserver.npm": "~/.npm-global/lib/node_modules",
  "tsserver.trace.server": "verbose",
  "tsserver.enable": true,
  "typescript.suggestionActions.enabled": false,
  "javascript.suggestionActions.enabled": false,
  "cSpell.enabledLanguageIds": ["markdown", "plaintext", "yml"]
}
